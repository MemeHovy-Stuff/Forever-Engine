<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- _________________________ Application Settings _________________________ -->

	<app title="Friday Night Funkin': Forever Engine" file="ForeverEngine" main="backend.system.Main" />
	<app version="1.0.0" company="CloverNCube" package="com.cloverncube.foreverengine" />

	<!-- [ Window Settings ] -->

	<window width="1280" height="720" fps="120" background="#000000" hardware="true" vsync="false" />
	<window if="desktop" orientation="landscape" fullscreen="false" resizable="true" />
	<window if="mobile" orientation="landscape" fullscreen="true" width="0" height="0" />

	<!-- [ Path Settings ] -->

	<set name="BUILD_DIR" value="export/debug" if="debug" />
	<set name="BUILD_DIR" value="export/release" unless="debug" />

	<source path="source" />
	<assets path="assets" />

	<!-- [ Defines ] -->

	<define name="SHOW_DISCORD_RPC" />
	<define name="FOREVER_SCRIPTING" if="sys" />
	<define name="FOREVER_MODS" if="sys" />

	<section if="mobile">
		<haxedef name="FLX_NO_MOUSE" if="mobile" />
		<haxedef name="FLX_NO_KEYBOARD" if="mobile" />
	</section>

	<section if="desktop">
		<haxedef name="FLX_NO_TOUCH" if="desktop" />
	</section>

	<haxedef name="FLX_NO_FOCUS_LOST_SCREEN" />
	<haxedef name="no-deprecation-warnings" />

	<section unless="debug" >
		<haxedef name="SHOW_DISCORD_RPC" />
		<haxedef name="FLX_NO_DEBUG" />
		<haxedef name="NAPE_RELEASE_BUILD" />
	</section>

	<!-- [ Libraries ] -->

	<haxelib name="format" />
	<haxelib name="flixel-nova" rename="flixel" />
	<haxelib name="flixel-addons-nova" rename="flixel-addons" />
	<haxelib name="discord_rpc" if="SHOW_DISCORD_RPC" />
	<haxelib name="hxcpp-debug-server" if="debug" />
</project>
